@using Domain.Entities;
@model IEnumerable<Request>
@{
}



<div class="task shadow-sm p-3 mb-5 bg-body-tertiary rounded d-flex justify-content-between align-items-center">
    <div class="form-check d-flex align-items-center">
        @foreach (var request in Model)
        {
            <div class="task shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                <div class="d-flex justify-content-start align-items-center">
                    <h5 class="me-2">@request.User?.Surname</h5>
                    <h5 class="me-2">@request.User?.Name</h5>
                    <h5>@request.User?.Patronymic</h5>
                    <p class="ms-auto">@request.PreferenceDate?.ToString("dd.MM.yyyy")</p>
                </div>
                <div class="d-flex justify-content-start align-items-center">
                    <p class="me-5">@request.User?.Email</p>
                    <p>@request.User?.Phone</p>
                </div>
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary">Зарегистрировать</button>
                </div>
            </div>
        }

    </div>
</div>