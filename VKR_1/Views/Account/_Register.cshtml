@using VKR_1.Models.Account;
@model RegisterViewModel

<form asp-action="Register" asp-controller="Account">
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Email"
                       type="text"
                       class="form-control"
                       placeholder="Введите email" />
                <label asp-for="Email" class="form-label">Email</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="Введите пароль"
                       value="@Model?.Password" />
                <label asp-for="Password" class="form-label">Пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input asp-for="RepeatPassword"
                       type="password"
                       class="form-control"
                       placeholder="Повторите пароль"
                       value="@Model?.RepeatPassword" />
                <label asp-for="RepeatPassword" class="form-label">Повторите пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
    </div>


    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Phone"
                       type="number"
                       class="form-control"
                       placeholder="Введите номер телефона" />
                <label asp-for="Phone" class="form-label">Номер телефона</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Surname"
                       type="text"
                       class="form-control"
                       placeholder="Введите фамилию" />
                <label asp-for="Surname" class="form-label">Фамилия</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Name"
                       type="text"
                       class="form-control"
                       placeholder="Введите имя" />
                <label asp-for="Name" class="form-label">Имя</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Patronymic"
                       type="text"
                       class="form-control"
                       placeholder="Введите отчество" />
                <label asp-for="Patronymic" class="form-label">Отчество</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Patronymic"></span>
    </div>



    <div class="text-danger mb-2">@ViewBag.RegisterError</div>
    <button type="submit" class="btn btn-primary w-100">Создать аккаунт</button>
</form>
