@using VKR_1.Models.HomeAdmin;
@model HomeViewModelAdmin

@{
    ViewData["Title"] = "Личный кабинет";
}
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h2>Список заявок</h2>
                <div class="card">
                    <div class="card-body">
                       
                        @foreach (var registration in Model.Registrations)
                        {
                            <vc:request-item registration="@registration" />
                        }
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <h2>Информация</h2>
                <div class="card">
                    <div class="card-header">
                        <h4>Администраторы</h4>
                    </div>
                    <div class="card-body">
                        @foreach (var admin in Model.Admins)
                        {
                            <div class="admin-item">
                                <h5>@admin.Surname</h5>
                                <h5>@admin.Name</h5>
                                <p>@admin.Phone</p>
                                <p>@admin.Email</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header">
                        <h4>Даты заселения</h4>
                    </div>
                    @if (!Model.DatesSet)
                    {
                        <form asp-action="CreateGeneral" method="post">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="StartDate"
                                               type="date"
                                               class="form-control shadow-sm rounded"
                                               placeholder="Username">
                                        <label asp-for="StartDate">Начальная дата</label>
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="EndDate"
                                               type="date"
                                               class="form-control shadow-sm rounded"
                                               placeholder="Username">
                                        <label asp-for="EndDate">Конечная дата</label>
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>

                                <button type="submit"
                                        class="btn btn-primary mt-2">
                                    Подтвердить
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div>
                            <div class="container">
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex justify-content-between ms-1 mt-3">
                                            <span>Начальная дата:</span>
                                            <span class="text-nowrap">@Model.StartDate.ToString("dd.MM.yyyy")</span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex justify-content-between ms-1 mt-3 mb-3">
                                            <span>Конечная дата:</span>
                                            <span class="text-nowrap">@Model.EndDate.ToString("dd.MM.yyyy")</span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    }
                </div>

            </div>

        </div>
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="~/js/components/RequestItem/Default.js"></script>
    }

</body>
</html>