@using VKR_1.Models.HomeAdmin;
@model HomeViewModelAdmin

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Your Application</title>

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h2>Список заявок</h2>
                <div class="card">
                    <div class="card-body">
                        @foreach (var request in Model.Requests)
                        {
                          @* <div class="request-item"> *@
                            <div class="task shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                                <div class="d-flex justify-content-start align-items-center">
                                    <h5 class="me-2">@request.User?.Surname</h5>
                                    <h5 class="me-2">@request.User?.Name</h5>
                                    <h5>@request.User?.Patronymic</h5>
                                    <p class="ms-auto">@request.PreferenceDate?.ToString("dd.MM.yyyy")</p>
                                </div>
                                <div class="d-flex justify-content-start align-items-center">
                                    <p class="me-5">@request.User?.Email</p>
                                    <p>@request.User?.Phone</p>
                                </div>
                                <div class="d-flex justify-content-start">
                                    <button type="button" class="btn btn-primary" @(Model.DatesSet ? "disabled" : "")>Зарегистрировать</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
            </div>
            
                <div class="col-md-4">
                    <h2>Информация</h2>
                    <div class="card">
                        <div class="card-header">
                            <h4>Администраторы</h4>
                        </div>
                        <div class="card-body">
                            @foreach (var admin in Model.Admins)
                            {
                                <div class="admin-item">
                                    <h5>@admin.Surname</h5>
                                    <h5>@admin.Name</h5>
                                    <p>@admin.Phone</p>
                                    <p>@admin.Email</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-header">
                            <h4>Даты заселения</h4>
                        </div>
                        <form asp-action="CreateGeneral">
                            <div class="card-body">
                                <input type="date" id="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" @(Model.DatesSet ? "disabled" : "") />
                                <input type="date" id="endDate" class="form-control mt-2" value="@Model.EndDate.ToString("yyyy-MM-dd")" @(Model.DatesSet ? "disabled" : "") />
                            <button type="submit" class="btn btn-primary mt-2" @(Model.DatesSet ? "disabled" : "")>Подтвердить</button>
                            </div>
                        </form>
                    </div>

                </div>
           
        </div>
    </div>

    @section Scripts{
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="~/js/components/RequestItem/Default.js"></script>
    }
    
</body>
</html>