@using VKR_1.Models.Home;
@model HomeViewModel

@{
    ViewData["Title"] = "Application Form";
}
 <form asp-action="Create">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2>Подача заявки</h2>
                <form asp-action="SubmitApplication" method="post">
                    <div class="form-group">
                        <label asp-for="PreferenceDate">Желаемая дата</label>
                        <input asp-for="PreferenceDate" class="form-control" type="date" />
                        <span asp-validation-for="PreferenceDate" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Подтвердить</button>
                </form>
            </div>
        </div>
    </div>
</form>